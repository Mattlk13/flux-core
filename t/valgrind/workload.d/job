#!/bin/bash -e

NJOBS=${NJOBS:-10}

flux jobspec srun ${SHARNESS_TEST_DIRECTORY}/shell/lptest 78 2 > job.json
for i in `seq 1 $NJOBS`; do
    id[$i]=$(flux job submit < job.json)
    echo ${id[$i]} submitted
done
for i in `seq 1 $NJOBS`; do
    flux job attach ${id[$i]}
    echo ${id[$i]} complete
done
